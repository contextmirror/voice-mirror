{
  "name": "voice-mirror-electron",
  "version": "0.1.0",
  "description": "Voice-controlled AI agent overlay for your entire computer",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "author": "Nathan + Claude",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.voicemirror.app",
    "productName": "Voice Mirror",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
